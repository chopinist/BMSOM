<div class="form-group">
  <span class="glyphicon glyphicon-user"></span> <%= label_tag(:username,t("login.labels.username")) %>
  <%= text_field_tag(:username, "", :class => "form-control") %>
</div>

<div class="form-group">
  <span class="glyphicon glyphicon-asterisk"></span> <%= label_tag(:password,t("login.labels.password")) %>
  <%= password_field_tag(:password, "", :class => "form-control") %>
</div>

<div class="form-group">
  <%= check_box_tag(:remember, "", :class => "form-control") %>
  <span class="glyphicon glyphicon-pushpin"></span> <%= label_tag(:remember,t("login.labels.remember")) %>
</div>

<div class="form-group">
  <%= link_to(t("topbar.forgot"), action: 'recover') %>
</div>
