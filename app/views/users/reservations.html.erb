<div class="row">
  <div class="col-md-12">
    <div class="panel panel-primary radius">
      <div class="panel-heading">
        <% date = today_not_weekend %>
        <h1 class="panel-title text-center">
          <%= t "todays_reservations.title" %>
          <%= l(date, :format => :il_date) %>:
        </h1>
      </div>
      <div class="panel-body">
        <div class="col-md-12">
          <%= render(:partial => 'shared/notifications')%>
          <%= render(:partial => 'reservations', locals: { date: date }) %>
        </div>
      </div>
    </div>
  </div>
</div>