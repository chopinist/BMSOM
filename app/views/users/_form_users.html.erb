<div id="users_container">
  <% @users.each do |user| %>
  <div class="btn-group btn-top-spacing btn-block">
    <button type="button" class="btn btn-primary radius dropdown-toggle btn-block" data-toggle="dropdown">
      <%= user.first_name + " " + user.last_name %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to(t("users_index.edit_user"),
                      edit_user_path(user.id)) %></li>
      <li><%= link_to(t("users_index.delete_user"), user_path(user.id),
                      :method => :delete,
                      remote: true ) %></li>
      <li><%= link_to(t("users_index.user_reservations"),
                      user_reservations_path(user.id) ) %></li>
    </ul>
  </div>
  <% end %>
  <div class="digg_pagination">
    <%= will_paginate(@users) %>
  </div>
</div>
