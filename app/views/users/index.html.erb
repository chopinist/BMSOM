<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= link_to(t("users_index.new_user"), new_user_path, :class => 'btn btn-success btn-lg radius') %><br/><br/>
    <div class="panel panel-primary radius">
      <div class="panel-heading">
        <h1 class="panel-title text-center"><span class="glyphicon glyphicon-user"></span> <%= t "users_index.title" %>:</h1>
      </div>
      <div class="panel-body">

        <% @users.each do |user| %>

            <div class="btn-group">
              <button type="button" class="btn btn-primary radius dropdown-toggle" data-toggle="dropdown">
                <%= user.first_name + " " + user.last_name %> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to(t("users_index.edit_user"), edit_user_path(user.id)) %></li>
                <li><%= link_to(t("users_index.delete_user"), user_path(user.id), :method => :delete ) %></li>
              </ul>
            </div>

            </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>